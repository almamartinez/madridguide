<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="io.keepcoding.madridguide">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".MadridGuideApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/MadridGuideTheme">
        <activity android:name=".activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.ShopsActivity" />
        <activity android:name=".activities.ShopDetailActivity"></activity>

        <!-- Content provider -->

        <provider
            android:name=".manager.db.provider.MadridGuideProvider"
            android:authorities="io.keepcoding.madridguide.provider" />

    </application>

</manifest>